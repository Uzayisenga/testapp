<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @publisher.name %>
</p>

<p>
  <strong>Publish:</strong>
  <%= @publisher.publish %>
</p>

<p>
  <strong>Email:</strong>
  <%= @publisher.email %>
</p>

<p>
  <strong>Time:</strong>
  <%= @publisher.time %>
</p>

<p>List of Comments(Contents below are important)</p>
  <!-- Get an HTML id of this comments_area and update only the part of that div -->
  <div id="comments_area">
    <!-- Render to display the posted comment list on the blogs detail page -->
    <%= render partial: 'comments/index', locals: { comments: @comments, publisher: @publisher } %>
  </div>
  <!-- Render to display the comment field on the blogs detail page -->
  <%= render partial: 'comments/form', locals: { comment: @comment, publisher: @publisher} %>

<%= link_to 'Edit', edit_publisher_path(@publisher) %> |
